{
  "name": "Containerlab Development",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],

  "runArgs": [
    "--privileged",
    "--network=host"
  ],

  "postCreateCommand": "bash .devcontainer/setup-containerlab.sh",

  "remoteUser": "vscode"
}
